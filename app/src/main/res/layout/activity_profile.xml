<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <TextView
        android:layout_marginVertical="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_view_reset_password"
        android:text="Reset Password"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_view_update_password"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_view_update_password"
        android:text="Update Password"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_view_update_email"/>
    <Button
        android:layout_width="match_parent"
        android:id="@+id/button_view_update_email"
        android:text="Update Email"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_delete"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/change_password_container"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_above="@id/change_email_container"
        android:orientation="vertical">
        <EditText
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Password"
            android:layout_below="@+id/logged_in_email"
            android:id="@+id/edit_text_update_password"/>
        <Button
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:layout_below="@id/edit_text_update_email"
            android:id="@+id/button_submit_update_password"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/change_email_container"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:layout_above="@id/button_delete"
    android:orientation="vertical">
    <EditText
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Email"
        android:layout_below="@+id/logged_in_email"
        android:id="@+id/edit_text_update_email"/>
    <Button
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Email"
        android:layout_below="@id/edit_text_update_email"
        android:id="@+id/button_submit_email_change"/>
</LinearLayout>

    <Button
        android:id="@+id/button_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        android:background="#FF0000"
        android:textColor="#fff"
        android:text="DELETE ACCOUNT" />

</RelativeLayout>